<div class="thesis py-3">
  <div class="card">
	<div class="card-body">
	  <div class="row">
		<div class="col-9">
		  <h5><%= link_to thesis.title, student_thesis_path(thesis.student, thesis) %></h5>
		  <% unless @student %>
		  	<p class="author trivial" title="student id: <%= thesis.student.sisid %>">By <%= thesis.student.name %></p>
		  <% end %>
		</div>
		<div class="pull-right col-3">
		  <%= render partial: "theses/assigned_to", locals: { thesis: thesis }%>
		  <span class="badge rounded-pill text-bg-secondary label status status-<%= thesis.status %>"><%= thesis.status.humanize %></span>
		</div>
	  </div>
	  <div class="row">
	  	<div class="col-6">
		  <h6>Supervisor</h6>
		  <p><%= thesis.supervisor %></p>
		  <h6>Exam date</h6>
		  <p><%= thesis.exam_date.strftime("%B %d, %Y") %></p>
		</div>				
		<div class="col-6">
		  <h6>Degree Name and Level</h6>
		  <p><%= format thesis.degree_name %> - <%= format thesis.degree_level %></p>
		  <h6>Program</h6>
		  <p><%= format thesis.program %></p>
		</div>
	  </div>
	</div>
  </div>
</div>