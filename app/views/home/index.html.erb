<% title "Overview" %>

<div class="home fitted">

	<ul class="nav nav-tabs">
		<li class="nav-item">
			<%= active_link_to 'Open', root_path, active: /\A\/\z/, class:"nav-link" %>
		</li>
		<li class="nav-item">
			<%= active_link_to 'Under Review', root_path(which: Thesis::UNDER_REVIEW), active: /under_review/, class:"nav-link" %>
		</li>
		<li class="nav-item">
			<%= active_link_to 'Accepted', root_path(which: Thesis::ACCEPTED), active: /accepted/, class:"nav-link" %>
		</li>
	</ul>	
	<div id="theses">
		<% if @theses.size == 0 %>
			<p>There are no <strong><%= @which.humanize.titleize %></strong> theses available right now.</p>
		<% end %>
		<% @theses.each do |thesis| %>			
			<%= render partial: thesis %>
		<% end %>		
	</div>
	
</div>