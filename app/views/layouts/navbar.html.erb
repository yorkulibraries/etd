<div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" id="mobile_nav_collapsed" data-toggle="collapse" data-target=".nav-collapse" aria-name="Mobile Menu">
          <span class="fa fa-bars"></span>
        </a>
        <a class="brand" href="<%= root_url %>" title="Electronic Thesis Dissertation Submission Program"><%= image_tag("logo.png")%></a>
        <div class="nav-collapse">
          <ul class="nav">
			<% if can? :create, Thesis %>
				<li class="<%= "active" if controller_name == "home" %>"><%= link_to "Overview",  root_path %></li>
			<% end %>
			<% if can? :update, Student %>
            	<li class="<%= "active" if controller_name == "students" %>"><%= link_to "Students", students_path %></li>
			<% end %>
			<% if can? :read, GemRecord %>
            	<li class="<%= "active" if controller_name == "gem_records" %>"><%= link_to "Gem Records", gem_records_path %></li>
			<% end %>
			<% if @current_user.role == User::ADMIN || @current_user.role == User::MANAGER %>
            	<li class="<%= "active" if controller_name == "reports" %>"><%= link_to "Reports", reports_dashboard_path %></li>
			<% end %>

			<% if @current_user.role == User::STUDENT %>
				<%= render partial: "student_view/student_navbar" %>
			<% end %>

          </ul>


		  <ul class="nav  pull-right">
			<% if can? :manage, Thesis %>
				<li>
					<%= form_tag gem_search_students_path, class: "navbar-form pull-left", method: "post " do |f| %>
					  <input name="sisid" class="span2 search" placeholder="Enter SISID or Name ...">
					<% end %>
				</li>
				<li class="divider-vertical"></li>
			<% end %>
			<% if @current_user.role == User::ADMIN || @current_user.role == User::MANAGER %>
			<li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-cog"></i></a>

        <ul class="dropdown-menu">

          <li><%= link_to "App Settings", edit_settings_path %></li>
          <li class="divider"></li>
          <li><a href='<%= export_logs_path %>'>DSpace Export</a></li>
          <li><%= link_to "DSpace Settings", dspace_settings_path %></li>
          <li class="divider"></li>

				  <li><a href="<%= users_path %>">Users</a></li>
        </ul>
			</li>
			<% end %>
			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#" title="<%= @current_user.name if @current_user %>">
				<%= truncate(@current_user.name, length: 20) if @current_user%> <b class="caret"></b>
				</a>
				<ul class="dropdown-menu">
					<% if session[:return_to_user_id] %>
						<li><%= link_to "Logout As Student", logout_as_student_path %></li>
					<% else %>
						<li><%= link_to "Logout", logout_path %></li>
					<% end %>
					<% if Rails.env.development? %>
						<li class="divider"></li>
						<li class="nav-header">Log in as </li>
						<% User::ROLE_NAMES.each do |role| %>
							<li><%=link_to role, login_path(:as => role)%></li>
						<% end %>
					<% end %>
				</ul>
			 </li>
		   </ul>
        </div>
      </div>
	</div>
</div>
