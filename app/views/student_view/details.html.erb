<% title "My Details" %>

<% title_html do %>
	<h4 class="blend soft">My Details</h4>
	<h1><%= @student.name %></h1>
<% end %>

<div class="student fitted">
	<table cellpadding="5">
		<tr>
			<td class="blend" width="10%">username</td>
			<td class="strong"><%= @student.username%></td>
			<td class="blend"  width="10%">SISID</td>
			<td class="strong"><%= @student.sisid %></td>
		</tr>
		<tr>
			<td class="blend">email</td>
			<td class="strong"><%= @student.email %></td>
			<td class="blend">joined on</td>
			<td class="strong"><%= @student.created_at.strftime("%B %d, %Y")%></td>
		</tr>
		<tr>
			<td class="blend" width="10%">invitation</td>
			<td class="strong">
				<% if @student.invitation_sent_at.nil? %>
					Invitation Email hasn't been sent yet.
				<% else %>
					Sent on <%= @student.invitation_sent_at.strftime("%B %d, %Y")%> 					
				<% end %>
			</td>
		</tr>
	</table>
</div>