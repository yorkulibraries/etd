 <div class="row pb-3 px-2">
	<div class="col border p-2 m-1 rounded step <%= activate == Thesis::PROCESS_BEGIN ? "bg-info-subtle border-info border-2" :"bg-light border-secondary border-1" %> <%= "disable" if block_thesis_changes?(@thesis) %>">
	  <div class="row">
	   <div class="col-lg-2 d-none d-lg-block">
		<i class="position-relative top-50 translate-middle ms-3 fa-2x <%= activate == Thesis::PROCESS_BEGIN ? "fa fa-hand-o-right" : "fa fa-circle-o" %>"></i>
	   </div>
	   <div class="col-lg-10 col-sm-12">
		<span class="text-black ms-2" title="Begin Submission">
			Begin<br/>
			<strong class="ms-2">submission</strong>
		</span>
	   </div>
	  </div>
	</div>
	<div class="col border p-2 m-1 rounded step  <%= activate == Thesis::PROCESS_UPDATE ? "bg-info-subtle border-info border-2" :"bg-light border-secondary border-1" %> <%= "disable" if block_thesis_changes?(@thesis) %>">
	  <div class="row">
	   <div class="col-lg-2 d-none d-lg-block">
		<i class="position-relative top-50 translate-middle ms-3 fa-2x <%= activate == Thesis::PROCESS_UPDATE ? "fa fa-hand-o-right" : "fa fa-circle-o" %>"></i>
	   </div>
	   <div class="col-lg-10 col-sm-12">
		<span class="text-black ms-2" title="Update Details">
			Update<br/>
			<strong class="ms-2">details</strong>
		</span>
	   </div>
	  </div>
	</div>
	<div class="col border p-2 m-1 rounded step  <%= activate == Thesis::PROCESS_UPLOAD ? "bg-info-subtle border-info border-2" :"bg-light border-secondary border-1" %> <%= "disable" if block_thesis_changes?(@thesis) %>">
	  <div class="row">
	   <div class="col-lg-2 d-none d-lg-block">
		<i class="position-relative top-50 translate-middle ms-3 fa-2x <%= activate == Thesis::PROCESS_UPLOAD ? "fa fa-hand-o-right" : "fa fa-circle-o" %>"></i>
	   </div>
	   <div class="col-lg-10 col-sm-12">
		<span class="text-black ms-2" title="Upload Files">
			Upload<br/>
			<strong class="ms-2">files</strong>
		</span>
	   </div>
	  </div>
	</div>
	<div class="col border p-2 m-1 rounded step  <%= activate == Thesis::PROCESS_REVIEW  ? "bg-info-subtle border-info border-2" :"bg-light border-secondary border-1" %>">
	  <div class="row">
	   <div class="col-lg-2 d-none d-lg-block">
		<i class="position-relative top-50 translate-middle ms-3 me-2 fa-2x <%= activate == Thesis::PROCESS_REVIEW ? "fa fa-hand-o-right" : "fa fa-circle-o" %>"></i>
	   </div>
	   <div class="col-lg-10 col-sm-12">
			<div class="ms-2">
				<span class="text-black" title="Review licences">
						Review<br/>
					<strong class="">distribution licences</strong>
				</span>
			</div>
	   </div>
	  </div>
	</div>
	<div class="col border p-2 m-1 rounded step <%= activate == Thesis::PROCESS_SUBMIT ? "bg-info-subtle border-info border-2" :"bg-light border-secondary border-1" %> <%= "disable" if block_thesis_changes?(@thesis) %>">
	  <div class="row">
	   <div class="col-lg-2 d-none d-lg-block">
		<i class="position-relative top-50 translate-middle ms-3 fa-2x <%= activate == Thesis::PROCESS_SUBMIT ? "fa fa-hand-o-right" : "fa fa-circle-o" %>"></i>
	   </div>
	   <div class="col-lg-10 col-sm-12">
		<span class="text-black ms-2" title="Submit For Review">
			Submit<br/>
			<strong class="ms-2">for review</strong>
		</span>
	   </div>
	  </div>
	</div>
	<div class="col border p-2 m-1 rounded step <%= activate == Thesis::PROCESS_STATUS ? "bg-info-subtle border-info border-2" :"bg-light border-secondary border-1" %>">
	  <div class="row">
	   <div class="col-lg-2 d-none d-lg-block">
		<i class="position-relative top-50 translate-middle ms-3 fa-2x <%= activate == Thesis::PROCESS_STATUS ? "fa fa-hand-o-right" : "fa fa-circle-o" %>"></i>
	   </div>
	   <div class="col-lg-10 col-sm-12">
		<span class="text-black ms-2" title="Check Thesis Status">
			Check<br/>
			<strong class="ms-2">status</strong>
		</span>
	   </div>
	  </div>
	</div>
 </div>
